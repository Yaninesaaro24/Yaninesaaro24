#include <iostream>

using namespace std;

int main() {
int N;
int suma = 0;
   cout<<"Ingrese un número entero positivo N: ";
   cin>> N;
   if (N <= 0) {
       cout<<"N debe ser un número entero positivo."<<endl;
   } else {
       for (int i = 1; i <= N; i += 2) {
           suma+=i;
       }
       cout<<"La suma de los números impares entre 1 y "<<N<<" es: "<<suma<<endl;
   }

   return 0;
}
