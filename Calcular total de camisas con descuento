/*Programa en c++ que calcule el total a pagar por la compra de camisas.
Si se compran tres camisas compran tres o mas se aplica un descuento del 20% sobre el 
total de la comprar */
#include <iostream>

using namespace std;

  int main(){
  float c,nc,cd1,cd2; 
  
    cout<<"Ingrese el numero de camisas que desee comprar:";
    cin>>nc;
    c=100;
    cd1=(c*nc)*0.8;
    cd2=(c*nc)*0.9;
       if (nc>=3) 
       {
    cout<<"El precio total al comprar tres o mas camisas es:"<<cd1<<endl;
    }
       else if((nc<3)&& (nc>0)) 
       {
    cout<<"El precio total al comprar menos de tres camisas es:"<<cd2<<endl;
     
       }
    return 0;
}
