/* Un programa que permita ingresar 3 numero por teclado y 
determine cual es menor*/
#include <iostream>

using namespace std;

int main()
{
    int n1,n2,n3;//variable de entrada
    int menor;// variable de salida
    cout<<"****PROGRAMA QUE DETERMINA EL MENOR DE TRES NUMEROS*****"<<endl<<endl;
    cout<<"Ingrese los tres valores a operar"<<endl;
    cin>>n1;//cin>>n1>>n2>>n3;
    cin>>n2;
    cin>>n3;
    if (n1<=n2 && n1<=n3)
    {
           menor=n1;
    }  
    else
    {
         if (n2<=n1 && n2<=n3)
         {
             menor=n2;
         }    
         else
         {
              if (n3<=n1 && n3<=n2)
              {
                  menor=n3;
              }  
              
         } 
    } 
    cout<<" Ingresaron los siguientes valores: "<<n1<<"---"<<n2<<"---"<<n3<<endl;
    cout<<"que el monor de los numero ingresados es: "<<menor<<endl;
    
    return 0;
}
